# ============================================================================
# FitHire Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains secrets!
# ============================================================================

# ============================================================================
# BACKEND ENVIRONMENT VARIABLES (FastAPI)
# ============================================================================

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
# Environment: development, staging, production
ENVIRONMENT=development

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Secret key for session signing (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ----------------------------------------------------------------------------
# Database (Neon PostgreSQL)
# ----------------------------------------------------------------------------
# Get this from: https://console.neon.tech
# Format: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@ep-example-123456.us-east-1.aws.neon.tech/fithire?sslmode=require

# Connection pool settings (optional, defaults shown)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ----------------------------------------------------------------------------
# Authentication (Clerk)
# ----------------------------------------------------------------------------
# Get these from: https://dashboard.clerk.com
# Backend Secret Key (starts with sk_)
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Clerk Publishable Key (starts with pk_)
CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Webhook secret for Clerk webhooks (from Clerk dashboard)
CLERK_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ----------------------------------------------------------------------------
# File Storage (Cloudflare R2)
# ----------------------------------------------------------------------------
# Get these from: https://dash.cloudflare.com â†’ R2
# Account ID
R2_ACCOUNT_ID=your-cloudflare-account-id

# R2 Bucket Name
R2_BUCKET_NAME=fithire-media

# R2 Access Credentials
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key

# R2 Endpoint (format: https://<account-id>.r2.cloudflarestorage.com)
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Public URL for R2 bucket (optional, if you set up a custom domain)
R2_PUBLIC_URL=https://media.fithire.com

# ----------------------------------------------------------------------------
# Redis (for Phase 2 - Celery task queue)
# ----------------------------------------------------------------------------
# Will be provided by Railway in production
# For local development, use: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# ----------------------------------------------------------------------------
# Logging
# ----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json, text
LOG_FORMAT=json

# ----------------------------------------------------------------------------
# External APIs (Future - Phase 2+)
# ----------------------------------------------------------------------------
# Google Gemini API for video analysis (v2 feature)
# GEMINI_API_KEY=your-gemini-api-key

# SendGrid for email notifications (Phase 3)
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@fithire.com


# ============================================================================
# FRONTEND ENVIRONMENT VARIABLES (Next.js)
# ============================================================================

# ----------------------------------------------------------------------------
# Next.js Settings
# ----------------------------------------------------------------------------
# Environment
NEXT_PUBLIC_ENV=development

# API URL (backend endpoint)
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# Site URL (for SEO, social sharing)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ----------------------------------------------------------------------------
# Authentication (Clerk - Frontend)
# ----------------------------------------------------------------------------
# Clerk Publishable Key (same as backend, but prefixed with NEXT_PUBLIC_)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Clerk Frontend API URL (usually auto-configured, but can override)
# NEXT_PUBLIC_CLERK_FRONTEND_API=https://your-app.clerk.accounts.dev

# After-login redirect paths
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# ----------------------------------------------------------------------------
# Feature Flags (Optional)
# ----------------------------------------------------------------------------
# Enable/disable features in development
NEXT_PUBLIC_FEATURE_VIDEO_UPLOAD=true
NEXT_PUBLIC_FEATURE_ADMIN_PANEL=true
NEXT_PUBLIC_FEATURE_ANALYTICS=false

# ----------------------------------------------------------------------------
# Analytics (Future)
# ----------------------------------------------------------------------------
# Google Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# PostHog (product analytics)
# NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com


# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================

# ----------------------------------------------------------------------------
# Local Development Tools
# ----------------------------------------------------------------------------
# Enable debug mode (verbose logging, dev tools)
DEBUG=true

# Disable authentication in local development (NOT FOR PRODUCTION)
DISABLE_AUTH=false

# Seed database with sample data on startup
SEED_DATABASE=false


# ============================================================================
# PRODUCTION SETTINGS (Railway / Vercel)
# ============================================================================
# These are typically auto-configured by the hosting platform
# Railway provides: DATABASE_URL, REDIS_URL
# Vercel provides: VERCEL_URL, VERCEL_ENV

# Railway-specific (auto-provided, no need to set)
# RAILWAY_ENVIRONMENT=production
# RAILWAY_SERVICE_NAME=fithire-backend

# Vercel-specific (auto-provided, no need to set)
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=fithire.vercel.app


# ============================================================================
# NOTES
# ============================================================================
#
# 1. SECURITY:
#    - Never commit .env files to git
#    - Rotate secrets regularly
#    - Use different credentials for dev/staging/prod
#
# 2. CLERK SETUP:
#    - Create application at https://dashboard.clerk.com
#    - Enable email/password authentication
#    - Add webhook endpoint: https://your-api.com/api/v1/auth/webhook
#    - Copy webhook secret to CLERK_WEBHOOK_SECRET
#
# 3. NEON SETUP:
#    - Create project at https://console.neon.tech
#    - Copy connection string (includes ?sslmode=require)
#    - Enable connection pooling for production
#
# 4. R2 SETUP:
#    - Create R2 bucket at https://dash.cloudflare.com
#    - Generate API tokens with R2 read/write permissions
#    - Optional: Set up custom domain for public access
#
# 5. LOCAL DEVELOPMENT:
#    - Backend runs on http://localhost:8000
#    - Frontend runs on http://localhost:3000
#    - Database can be local PostgreSQL or Neon
#
# 6. MONOREPO STRUCTURE:
#    - Copy backend vars to /backend/.env
#    - Copy frontend vars to /frontend/.env
#    - Keep sensitive vars out of /frontend (no NEXT_PUBLIC_ prefix for secrets)
#
# ============================================================================
